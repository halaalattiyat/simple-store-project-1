<%- include('partials/header', { title: 'Orders' }) %>

<h2 class="fw-bold mb-3">Orders</h2>

<table class="table table-hover shadow-sm">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Product</th>
      <th>Qty</th>
      <th>Total</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(o => { %>
      <tr>
        <td><%= o.id %></td>
        <td><%= o.userName %></td>
        <td><%= o.productName %></td>
        <td><%= o.quantity %></td>
        <td>$<%= o.total %></td>
        <td><%= new Date(o.createdAt).toLocaleString() %></td>
      </tr>
    <% }) %>
    <% if (orders.length === 0) { %>
      <tr><td colspan="6" class="text-center text-muted">No orders yet</td></tr>
    <% } %>
  </tbody>
</table>

<%- include('partials/footer') %>
