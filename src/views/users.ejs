<%- include('partials/header', { title: 'Users' }) %>

<h2 class="fw-bold mb-3">Users</h2>

<div class="row g-3">
  <% users.forEach(u => { %>
    <div class="col-md-4">
      <div class="card p-3 shadow-sm">
        <div class="d-flex align-items-center">
          <div class="avatar rounded-circle bg-light me-3" style="width:54px;height:54px;display:flex;align-items:center;justify-content:center;">
            <strong><%= u.name.split(' ').map(n=>n[0]).slice(0,2).join('') %></strong>
          </div>
          <div>
            <div class="fw-semibold"><%= u.name %></div>
            <div class="text-muted small"><%= u.email %></div>
            <div class="text-muted small"><%= u.city %></div>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<%- include('partials/footer') %>
