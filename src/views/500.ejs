<%- include('partials/header', { title: 'Server Error' }) %>

<div class="container text-center mt-5">
  <h1 class="display-4 text-danger">500 - Internal Server Error</h1>
  <p class="lead mt-3">Oops! Something went wrong on our end.</p>
  <p>Please try again later or go back to the <a href="/">home page</a>.</p>

  <% if (error && error.message) { %>
    <div class="alert alert-danger mt-4" role="alert">
      <strong>Error details:</strong> <%= error.message %>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>
